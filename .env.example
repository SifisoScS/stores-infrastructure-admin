# =============================================================================
# Derivco Facilities Management - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# SQL SERVER CONFIGURATION
# =============================================================================

# SQL Server Connection
SQL_SERVER_HOST=localhost
SQL_SERVER_DATABASE=DerivcoDurbanFacilities
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=YourSecurePassword123!
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server

# Use Windows Authentication (set to True to use Windows auth instead of username/password)
SQL_SERVER_USE_WINDOWS_AUTH=False

# SQLAlchemy Configuration
SQL_ECHO=False  # Set to True to log all SQL statements (useful for debugging)

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars

# Application Settings
APP_NAME=Derivco Facilities Management
APP_VERSION=1.0.0

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds
JWT_ALGORITHM=HS256

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16 MB in bytes
UPLOAD_FOLDER=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============================================================================
# AZURE SQL DATABASE EXAMPLE (for production)
# =============================================================================

# Azure SQL Database Connection (uncomment and update for Azure)
# SQL_SERVER_HOST=your-server.database.windows.net
# SQL_SERVER_DATABASE=DerivcoDurbanFacilities
# SQL_SERVER_USERNAME=facilities_admin
# SQL_SERVER_PASSWORD=YourAzurePassword123!
# SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server

# =============================================================================
# DEVELOPMENT / TESTING / PRODUCTION ENVIRONMENTS
# =============================================================================

# Environment Mode
ENVIRONMENT=development  # Options: development, testing, production

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://localhost:5001,http://127.0.0.1:5000

# Session Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# OPTIONAL: EMAIL NOTIFICATIONS
# =============================================================================

# Email Configuration (for alerts and notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-specific-password

# =============================================================================
# OPTIONAL: MONITORING & LOGGING
# =============================================================================

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================

# Migration Mode (for parallel Excel + SQL Server running)
MIGRATION_MODE=excel_only  # Options: excel_only, sql_only, parallel
EXCEL_BACKUP_ENABLED=True